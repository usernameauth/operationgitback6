<!DOCTYPE html>
<html lang="{{site.locale}}"{{#if site.rtl}} dir="rtl"{{/if}}>
{{> html-head }}

<body>
  {{> header }}

  <main id="main">
    <div class="container" dir="auto">
      <h2>News from {{ pagination.year }}</h2>

      <ul class="blog-index">
        {{#each pagination.posts}}
          <li>
            <time datetime="{{ strftime post.date '%FT%T%z' }}">{{ strftime post.date "%d %b" }}</time>
            <a href="/{{ ../site.locale }}/{{ post.path }}/">{{ post.title }}</a>
          </li>
        {{/each}}
      </ul>

      {{#if pagination}}
      <nav aria-label="pagination" class="pagination">
        {{#if pagination.prev.path}}
        <a href="/{{ site.locale }}/{{ pagination.prev.path }}/">&lt; Newer</a>
        {{/if}}

        {{#if pagination.prev.path}}{{#if pagination.next.path}}
        |
        {{/if}}{{/if}}

        {{#if pagination.next.path}}
        <a href="/{{ site.locale }}/{{ pagination.next.path }}/">Older &gt;</a>
        {{/if}}
      </nav>
      {{/if}}
    </div>
  </main>

  {{> footer }}
</body>
</html>
