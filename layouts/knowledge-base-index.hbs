<!DOCTYPE html>
<html lang="{{site.locale}}"{{#if site.rtl}} dir="rtl"{{/if}}>
{{> html-head }}

<body>
  {{> header }}

  <main id="main">
    <div class="container has-side-nav">

      {{!-- {{> navigation key='docs'}} --}}

      <article>
        {{{ contents }}}

        <ul class="no-padding">
        {{#each collections.knowledgeBase}}
          {{#startswith path 'knowledge/'}}
            <li><a href="/{{../site.locale}}/{{ path }}/">{{ title }}</a></li>
          {{/startswith}}
        {{/each}}
        </ul>
      </article>

    </div>
  </main>

  {{> footer }}
</body>
</html>
